    "autoprefix": "^1.0.1",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "jest": "^22.1.4",
    "node-sass": "^4.7.2",
    "parcel-bundler": "^1.4.1",
    "parcel-plugin-typescript": "^0.5.2",
    "postcss-modules": "^1.1.0",
    "prettier": "^1.10.2",
    "react-test-renderer": "^16.2.0",
    "ts-jest": "^22.0.1",
